{
    "hosting": {
        "public": "rayatiga-super-app",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "redirects": [
            {
                "source": "/hiring",
                "destination": "/career",
                "type": 301
            },
            {
                "source": "/hiring/info",
                "destination": "/career/info",
                "type": 301
            },
            {
                "source": "/about.html",
                "destination": "/about",
                "type": 301
            },
            {
                "source": "/contact.html",
                "destination": "/contact",
                "type": 301
            },
            {
                "source": "/project.html",
                "destination": "/project",
                "type": 301
            }
        ]
    }
}
